{% extends "Common/common.html.twig" %}


{% block header %}
<script type="text/javascript" src="../../Views/js/app.js"></script>
{% endblock %}



{% block contenido %}
<navbar>
    <ul>
        {% for categoria in categorias %}
        {% if categoria.id != 1 %}
        <li id="categoria{{ categoria.id }}" class="appCat">{{ categoria.nombre }}</li>
        {% endif %}
        {% endfor %}
    </ul>
</navbar>

{% for categoria in categorias %} 
{% if categoria.id != 1 %}
<ul class="categoria{{ categoria.id }} hidden">
    {% for producto in productos %}
    {% if producto.categoria == categoria.id %}
    <li id="{{ producto.id }}">
        <div><img class="imgProducto"  src="{{ producto.imgDir}}"></div>
        <div class="contenidoProducto"><span class="nombreProducto">{{ producto.nombre }}</span><span><span class="precioProducto">{{producto.precio}}</span>€</span></div>
        <button class="añadirCarrito">Añadir</button>
    </li>
    {% endif %}
    {% endfor %}
</ul>
{% endif %}
{% endfor %}

<!-- El carrito va aqui  -->
<div id="carrito">
    <ul id="listaCarrito">
    

    </ul>
    <div>Total: <span id="totalCarrito">0</span>€</div>
    <button id="botonPedir">Pedir</button>
</div>
<!-- Aqui va el pedido -->
<div id="pedido">

<button id="botonPagar">Pagar</button>
</div>
{% endblock %}


